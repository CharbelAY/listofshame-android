<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="16dp">

    <Button
        android:id="@+id/chooseImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/progressBar"
        android:layout_marginTop="8dp"
        android:text="@string/chooseImage" />

    <EditText
        android:id="@+id/editTextImageComment"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/EnterComment"
        android:layout_alignParentBottom="true"
        android:padding="25dp"
        android:layout_marginTop="16dp"
        android:inputType="textMultiLine"
        />

    <ImageView
        android:id="@+id/ImageView"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/chooseImage"
        android:layout_above="@+id/UploadImage"/>

    <ProgressBar
        android:id="@+id/progressBar"
        style="@style/Widget.AppCompat.ProgressBar.Horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        />

    <Button
        android:id="@+id/UploadImage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editTextImageComment"
        android:layout_centerInParent="true"
        android:text="@string/UploadImage" />

    <Button
        android:id="@+id/TakePicture"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="8dp"
        android:layout_below="@+id/progressBar"
        android:text="@string/OpenCamera" />



</RelativeLayout>